export ZSH="/Users/xin.hao/.oh-my-zsh"

ZSH_THEME="robbyrussell"

plugins=(
  git
)

source $ZSH/oh-my-zsh.sh

export PATH=$PATH:$HOME/go/bin
export PATH=$PATH:$HOME/.istioctl/bin
export PATH=$PATH:$HOME/github/haoxins/shell

export JAVA_HOME=$(/usr/libexec/java_home -v 11)
export GITHUB_DIR=$HOME/github
export SPRING_PROFILES_ACTIVE=local

# Modern CLIs
alias ls=exa
alias cat=bat
alias find=fd
alias http=xh
alias grep=rg
alias du=dust
alias ps=procs

alias c=clear
alias k=kubectl
alias pyf=black
alias py=python3

# K8s
alias kns=kubens
alias kctx=kubectx
alias kuse="k config set-context --current --namespace"
alias kenvoy="k exec --stdin --tty -c istio-proxy"
alias kexec="k exec --stdin --tty"

alias serve="python3 -m http.server"
alias gitignore="echo .DS_Store > .gitignore"
alias ip="ifconfig | grep inet | grep netmask | grep broadcast | cut -d: -f2"

alias up="docker-compose up"
alias g7="gradle clean ktlintFormat build -x test"

# gRPC debug
alias grpcdebug="export GRPC_TRACE=all GRPC_VERBOSITY=DEBUG"
